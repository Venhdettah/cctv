{
  "version": 1,
  "formatters": {
    "basic": {
      "class": "logging.Formatter",
      "format": "%(asctime)s %(levelname)-8s %(name)-20s %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "basic",
      "level": "DEBUG",
      "stream": "ext://sys.stdout"
    }
  },
  "loggers": {
    "cctv": {
      "level": "DEBUG"
    },
    "cctv.inputs": {
      "level": "INFO"
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["console"]
  }
}
